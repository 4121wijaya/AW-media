    <script>
        // API URLs - Using your deployed Google Apps Script
        const BASE_URL = 'https://script.google.com/macros/s/AKfycby8OrKO12yB0YHiVbUH1xQEKIaxyfwHqz8qOMxSRBlAVwmuZibAHVC_RiA6wT2W6T7C/exec';
        const INFO_SEKOLAH_URL = BASE_URL + '?sheet=INFO_SEKOLAH';
        const SISWA_URL = BASE_URL + '?sheet=DATA_SISWA';
        const GURU_URL = BASE_URL + '?sheet=DATA_GURU';
        
        let currentUser = null;
        let schoolInfo = null;
        
        // Load school info (logo and name)
        async function loadSchoolInfo() {
            try {
                console.log('Loading school info from:', INFO_SEKOLAH_URL);
                const response = await fetch(INFO_SEKOLAH_URL);
                const csvText = await response.text();
                console.log('School info CSV response:', csvText); // Debug log
                
                const data = parseCSV(csvText);
                console.log('Parsed school data:', data); // Debug log
                
                if (data.length > 0) {
                    const schoolData = data[0]; // First row of data
                    console.log('School data row:', schoolData); // Debug log
                    
                    // Column mapping: A=NAMA_SEKOLAH, B=ALAMAT_SEKOLAH, C=TELEPON_SEKOLAH, D=LOGO_SEKOLAH
                    schoolInfo = {
                        name: schoolData[0] || 'Sekolah',
                        alamat: schoolData[1] || '',
                        telepon: schoolData[2] || '',
                        logo: schoolData[3] || ''
                    };
                    
                    console.log('School info object:', schoolInfo); // Debug log
                    
                    // Set school name
                    document.getElementById('schoolName').textContent = schoolInfo.name;
                    
                    // Set logos with better error handling
                    if (schoolInfo.logo && schoolInfo.logo.trim() && schoolInfo.logo !== '') {
                        const logoImg = document.getElementById('schoolLogo');
                        const dashboardLogoImg = document.getElementById('dashboardLogo');
                        
                        console.log('Setting logo URL:', schoolInfo.logo);
                        
                        logoImg.onload = function() {
                            console.log('Logo loaded successfully');
                            logoImg.style.display = 'block';
                        };
                        logoImg.onerror = function() {
                            console.error('Failed to load logo:', schoolInfo.logo);
                            logoImg.style.display = 'none';
                        };
                        
                        logoImg.src = schoolInfo.logo;
                        dashboardLogoImg.src = schoolInfo.logo;
                    } else {
                        console.log('No valid logo URL found:', schoolInfo.logo);
                    }
                } else {
                    console.log('No school data found');
                }
            } catch (error) {
                console.error('Error loading school info:', error);
            }
        }
        
        // Parse CSV data with better handling
        function parseCSV(csvText) {
            const rows = csvText.split('\n');
            const data = [];
            
            // Skip header row (index 0) and process data rows
            for (let i = 1; i < rows.length; i++) {
                const row = rows[i].trim();
                if (row) {
                    // Handle CSV parsing with proper quote handling
                    const cols = [];
                    let current = '';
                    let inQuotes = false;
                    
                    for (let j = 0; j < row.length; j++) {
                        const char = row[j];
                        if (char === '"') {
                            inQuotes = !inQuotes;
                        } else if (char === ',' && !inQuotes) {
                            cols.push(current.trim());
                            current = '';
                        } else {
                            current += char;
                        }
                    }
                    cols.push(current.trim()); // Add the last column
                    
                    // Clean up quotes from values
                    const cleanCols = cols.map(col => col.replace(/^"|"$/g, '').trim());
                    data.push(cleanCols);
                }
            }
            return data;
        }
        
        // Login function - Updated to match your database structure
        async function login(username, password, role) {
            try {
                const url = role === 'siswa' ? SISWA_URL : GURU_URL;
                console.log('Fetching data from:', url);
                
                const response = await fetch(url);
                const csvText = await response.text();
                console.log('CSV response:', csvText); // Debug log
                
                const data = parseCSV(csvText);
                console.log('Parsed data:', data); // Debug log
                
                // Find user based on your database structure
                let user;
                if (role === 'siswa') {
                    // For students: NISN in column B (index 1), PASSWORD in column C (index 2)
                    console.log('Looking for student with NISN:', username, 'and password:', password);
                    user = data.find(row => {
                        console.log('Checking row:', row, 'NISN:', row[1], 'Password:', row[2]);
                        return String(row[1]).trim() === String(username).trim() && 
                               String(row[2]).trim() === String(password).trim();
                    });
                } else {
                    // For teachers: USERNAME_GURU in column B (index 1), PASSWORD_GURU in column C (index 2)
                    console.log('Looking for teacher with username:', username, 'and password:', password);
                    user = data.find(row => {
                        console.log('Checking teacher row:', row, 'Username:', row[1], 'Password:', row[2]);
                        return String(row[1]).trim() === String(username).trim() && 
                               String(row[2]).trim() === String(password).trim();
                    });
                }
                
                console.log('Found user:', user); // Debug log
                
                if (user) {
                    currentUser = {
                        role: role,
                        username: username,
                        data: user
                    };
                    
                    if (role === 'siswa') {
                        showStudentDashboard(user);
                    } else {
                        showTeacherDashboard(user);
                    }
                    return true;
                } else {
                    console.log('User not found');
                    return false;
                }
            } catch (error) {
                console.error('Login error:', error);
                return false;
            }
        }
        
        // Generate QR Code from NISN using Google Charts API (Same as Google Sheets formula)
        function generateQRCodeFromNISN(nisn) {
            console.log('=== GENERATE QR CODE FUNCTION ===');
            console.log('Input NISN:', nisn);
            
            const qrImg = document.getElementById('qrCode');
            if (!qrImg) {
                console.error('QR Code image element not found!');
                return;
            }
            
            console.log('QR Image element found:', qrImg);
            
            // Validate NISN
            if (!nisn || nisn === 'N/A' || String(nisn).trim() === '') {
                console.log('Invalid NISN, showing placeholder');
                qrImg.src = 'data:image/svg+xml;base64,' + btoa(`
                    <svg width="144" height="144" xmlns="http://www.w3.org/2000/svg">
                        <rect width="144" height="144" fill="#FFF8DC" stroke="#8B4513" stroke-width="2"/>
                        <text x="72" y="60" text-anchor="middle" fill="#8B4513" font-size="12" font-family="Arial" font-weight="bold">
                            No NISN
                        </text>
                        <text x="72" y="80" text-anchor="middle" fill="#8B4513" font-size="10" font-family="Arial">
                            Available
                        </text>
                    </svg>
                `);
                return;
            }
            
            const cleanNISN = String(nisn).trim();
            console.log('Clean NISN for QR:', cleanNISN);
            
            // Show loading state
            qrImg.src = 'data:image/svg+xml;base64,' + btoa(`
                <svg width="144" height="144" xmlns="http://www.w3.org/2000/svg">
                    <rect width="144" height="144" fill="#FFF8DC" stroke="#8B4513" stroke-width="2"/>
                    <circle cx="72" cy="60" r="8" fill="none" stroke="#8B4513" stroke-width="2">
                        <animate attributeName="stroke-dasharray" values="0 50;25 25;0 50" dur="1s" repeatCount="indefinite"/>
                    </circle>
                    <text x="72" y="85" text-anchor="middle" fill="#8B4513" font-size="10" font-family="Arial">
                        Generating QR...
                    </text>
                    <text x="72" y="100" text-anchor="middle" fill="#8B4513" font-size="8" font-family="Arial">
                        NISN: ${cleanNISN}
                    </text>
                </svg>
            `);
            
            try {
                // Use Google Charts API (same as Google Sheets IMAGE formula)
                // Equivalent to: =IMAGE("https://image-charts.com/chart?chs=150x150&cht=qr&chl="&ENCODEURL(B2))
                const encodedNISN = encodeURIComponent(cleanNISN);
                const qrUrl = `https://image-charts.com/chart?chs=144x144&cht=qr&chl=${encodedNISN}&choe=UTF-8`;
                
                console.log('Generated QR URL:', qrUrl);
                
                // Test if image loads successfully
                const testImg = new Image();
                testImg.crossOrigin = 'anonymous';
                
                testImg.onload = function() {
                    console.log('✅ QR Code generated successfully using Google Charts API!');
                    qrImg.src = qrUrl;
                    
                    qrImg.onload = function() {
                        console.log('✅ QR Code image loaded successfully in DOM');
                    };
                };
                
                testImg.onerror = function() {
                    console.error('❌ Failed to generate QR Code using Google Charts API');
                    // Fallback to alternative QR service
                    const fallbackUrl = `https://api.qrserver.com/v1/create-qr-code/?size=144x144&data=${encodedNISN}&bgcolor=FFF8DC&color=8B4513`;
                    console.log('Trying fallback QR service:', fallbackUrl);
                    
                    const fallbackImg = new Image();
                    fallbackImg.onload = function() {
                        console.log('✅ Fallback QR Code service worked!');
                        qrImg.src = fallbackUrl;
                    };
                    
                    fallbackImg.onerror = function() {
                        console.error('❌ All QR services failed');
                        qrImg.src = 'data:image/svg+xml;base64,' + btoa(`
                            <svg width="144" height="144" xmlns="http://www.w3.org/2000/svg">
                                <rect width="144" height="144" fill="#FFF8DC" stroke="#8B4513" stroke-width="2"/>
                                <text x="72" y="50" text-anchor="middle" fill="#8B4513" font-size="10" font-family="Arial">
                                    QR Service
                                </text>
                                <text x="72" y="65" text-anchor="middle" fill="#8B4513" font-size="10" font-family="Arial">
                                    Unavailable
                                </text>
                                <text x="72" y="85" text-anchor="middle" fill="#8B4513" font-size="8" font-family="Arial">
                                    NISN: ${cleanNISN}
                                </text>
                                <text x="72" y="100" text-anchor="middle" fill="#8B4513" font-size="6" font-family="Arial">
                                    Check connection
                                </text>
                            </svg>
                        `);
                    };
                    
                    fallbackImg.src = fallbackUrl;
                };
                
                testImg.src = qrUrl;
                
            } catch (error) {
                console.error('QR Code generation exception:', error);
                qrImg.src = 'data:image/svg+xml;base64,' + btoa(`
                    <svg width="144" height="144" xmlns="http://www.w3.org/2000/svg">
                        <rect width="144" height="144" fill="#FFF8DC" stroke="#8B4513" stroke-width="2"/>
                        <text x="72" y="60" text-anchor="middle" fill="#8B4513" font-size="10" font-family="Arial">
                            Exception Error
                        </text>
                        <text x="72" y="80" text-anchor="middle" fill="#8B4513" font-size="8" font-family="Arial">
                            NISN: ${cleanNISN}
                        </text>
                    </svg>
                `);
            }
        }
        
        // Show teacher dashboard
        function showTeacherDashboard(userData) {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('teacherDashboard').style.display = 'block';
            
            // Fill teacher data based on your database structure
            // A=ID_GURU, B=USERNAME_GURU, C=PASSWORD_GURU, D=NAMA_GURU, 
            // E=JABATAN_GURU, F=MAPEL_GURU, G=WALI_KELAS_GURU
            
            const username = userData[1] || 'N/A';  // Column B (USERNAME_GURU)
            const namaGuru = userData[3] || userData[1] || 'N/A';  // Column D (NAMA_GURU)
            
            console.log('Teacher data:', userData); // Debug log
            console.log('Username:', username, 'Nama:', namaGuru); // Debug log
            console.log('Jabatan (E):', userData[4], 'Mapel (F):', userData[5], 'Wali Kelas (G):', userData[6]); // Debug log
            
            document.getElementById('teacherName').textContent = namaGuru;
            document.getElementById('teacherUser').textContent = username;
            document.getElementById('teacherFullName').textContent = namaGuru;
            document.getElementById('teacherJabatan').textContent = userData[4] || 'N/A';  // Column E (JABATAN_GURU)
            document.getElementById('teacherMapel').textContent = userData[5] || 'N/A';  // Column F (MAPEL_GURU)
            document.getElementById('teacherWaliKelas').textContent = userData[6] || 'N/A';  // Column G (WALI_KELAS_GURU)
            
            // Set teacher dashboard logo
            const teacherDashboardLogo = document.getElementById('teacherDashboardLogo');
            if (schoolInfo && schoolInfo.logo) {
                teacherDashboardLogo.src = schoolInfo.logo;
            }
        }
        
        // Show student dashboard
        function showStudentDashboard(userData) {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('studentDashboard').style.display = 'block';
            
            // Fill student data based on your exact database structure
            // A=ID_SISWA, B=NISN, C=PASSWORD, D=NAMA_LENGKAP_SISWA, 
            // E=?, F=KELAS_SISWA, G=WALI_KELAS, H=TEMPAT_LAHIR, I=TANGGAL_LAHIR, J=JENIS_KELAMIN, 
            // K=FOTO_SISWA, L=TAHUN_AJARAN, M=AGAMA_SISWA
            
            const nisn = userData[1] || 'N/A';  // Column B (NISN)
            const namaLengkap = userData[3] || userData[1] || 'N/A';  // Column D (NAMA_LENGKAP_SISWA)
            
            console.log('Student data:', userData); // Debug log
            console.log('NISN:', nisn, 'Nama:', namaLengkap); // Debug log
            console.log('Kelas (F):', userData[5], 'Wali Kelas (G):', userData[6], 'Tahun Ajaran (L):', userData[11], 'Agama (M):', userData[12], 'Foto (K):', userData[10]); // Debug log
            
            document.getElementById('studentName').textContent = namaLengkap;
            document.getElementById('studentNISN').textContent = nisn;
            document.getElementById('studentFullName').textContent = namaLengkap;
            document.getElementById('studentClass').textContent = userData[5] || 'N/A';  // Column F (KELAS_SISWA) - F2 = index 5
            document.getElementById('studentWaliKelas').textContent = userData[6] || 'N/A';  // Column G (WALI_KELAS) - G2 = index 6
            document.getElementById('studentTahunAjaran').textContent = userData[11] || 'N/A';  // Column L (TAHUN_AJARAN) - L2 = index 11
            document.getElementById('studentAgama').textContent = userData[12] || 'N/A';  // Column M (AGAMA_SISWA) - M2 = index 12
            
            // Set student photo - FOTO_SISWA is in column K (K2 = index 10)
            const photoUrl = userData[10];
            console.log('Student photo URL:', photoUrl); // Debug log
            
            const photoImg = document.getElementById('studentPhoto');
            if (photoUrl && photoUrl.trim() && photoUrl !== 'N/A') {
                console.log('Setting student photo from URL:', photoUrl);
                
                photoImg.onload = function() {
                    console.log('Student photo loaded successfully');
                };
                
                photoImg.onerror = function() {
                    console.log('Failed to load student photo, using placeholder');
                    // Set placeholder if photo fails to load
                    photoImg.src = 'data:image/svg+xml;base64,' + btoa(`
                        <svg width="160" height="192" xmlns="http://www.w3.org/2000/svg">
                            <rect width="160" height="192" fill="#FFF8DC" stroke="#8B4513" stroke-width="2"/>
                            <circle cx="80" cy="70" r="25" fill="#8B4513" opacity="0.3"/>
                            <rect x="55" y="110" width="50" height="60" rx="25" fill="#8B4513" opacity="0.3"/>
                            <text x="80" y="180" text-anchor="middle" fill="#8B4513" font-size="10" font-family="Arial">
                                Foto Siswa
                            </text>
                        </svg>
                    `);
                };
                
                photoImg.src = photoUrl;
            } else {
                console.log('No valid photo URL, using placeholder');
                // Set placeholder if no photo URL
                photoImg.src = 'data:image/svg+xml;base64,' + btoa(`
                    <svg width="160" height="192" xmlns="http://www.w3.org/2000/svg">
                        <rect width="160" height="192" fill="#FFF8DC" stroke="#8B4513" stroke-width="2"/>
                        <circle cx="80" cy="70" r="25" fill="#8B4513" opacity="0.3"/>
                        <rect x="55" y="110" width="50" height="60" rx="25" fill="#8B4513" opacity="0.3"/>
                        <text x="80" y="180" text-anchor="middle" fill="#8B4513" font-size="10" font-family="Arial">
                            Foto Siswa
                        </text>
                    </svg>
                `);
            }
            
            // Generate QR Code from NISN data (Column B) - ENHANCED VERSION
            console.log('=== QR CODE GENERATION START ===');
            console.log('NISN for QR Code:', nisn);
            console.log('NISN type:', typeof nisn);
            console.log('NISN length:', nisn ? nisn.length : 'null');
            
            // Generate QR Code immediately without timeout
            generateQRCodeFromNISN(nisn);
        }
        
        // Logout function
        function logout() {
            currentUser = null;
            document.getElementById('studentDashboard').style.display = 'none';
            document.getElementById('teacherDashboard').style.display = 'none';
            document.getElementById('loginPage').style.display = 'flex'; // Changed from 'block' to 'flex'
            document.getElementById('loginForm').reset();
            document.getElementById('errorMessage').classList.add('hidden');
            
            // Reset radio button styles
            document.querySelectorAll('input[name="role"]').forEach(radio => {
                radio.checked = false;
                updateRadioStyle(radio);
            });
            
            // Force scroll to top and ensure centering
            window.scrollTo(0, 0);
            document.body.style.overflow = 'auto';
        }
        
        // Update radio button style
        function updateRadioStyle(radio) {
            const label = radio.closest('label');
            const div = label.querySelector('div');
            if (radio.checked) {
                div.style.background = 'linear-gradient(135deg, rgba(255, 107, 53, 0.2), rgba(247, 147, 30, 0.2))';
                div.style.borderColor = '#FF6B35';
                div.style.transform = 'scale(1.05)';
            } else {
                div.style.background = 'rgba(255, 248, 220, 0.8)';
                div.style.borderColor = '#8B4513';
                div.style.transform = 'scale(1)';
            }
        }
        
        // Form submission
        document.getElementById('loginForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const role = document.querySelector('input[name="role"]:checked')?.value;
            
            if (!role) {
                showError('Silakan pilih role terlebih dahulu!');
                return;
            }
            
            console.log('Login attempt:', { username, password, role }); // Debug log
            
            // Show loading
            document.getElementById('loginText').style.display = 'none';
            document.getElementById('loginLoading').style.display = 'inline-block';
            document.getElementById('loginBtn').disabled = true;
            
            const success = await login(username, password, role);
            
            // Hide loading
            document.getElementById('loginText').style.display = 'inline';
            document.getElementById('loginLoading').style.display = 'none';
            document.getElementById('loginBtn').disabled = false;
            
            if (!success) {
                showError('NISN atau password salah! Silakan coba lagi.');
            }
        });
        
        // Show error message
        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            const errorText = document.getElementById('errorText');
            errorText.textContent = message;
            errorDiv.classList.remove('hidden');
            setTimeout(() => {
                errorDiv.classList.add('hidden');
            }, 5000);
        }
        
        // Radio button styling
        document.querySelectorAll('input[name="role"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.querySelectorAll('input[name="role"]').forEach(r => {
                    updateRadioStyle(r);
                });
            });
        });
        
        // Initialize app
        document.addEventListener('DOMContentLoaded', function() {
            loadSchoolInfo();
        });
    </script>
